@model MvcLabManager.Models.Lab

@{
    ViewData["Title"] = "Atualização de Laboratório";
}

<h1>@ViewData["Title"] @Model.Id</h1><br>

<form action="/Lab/Update" method="post">
    <center>
        <table>
            <tr>
                <td><label for="id">Id:&nbsp;&nbsp;&nbsp;</label></td>
                <td><input type="number" name="id" id="id" value="@Model.Id" readonly></td>
            </tr>
            <tr>
                <td><label for="num">Número:</label></td>
                <td><input type="number" name="num" id="num" required> GB</td>
            </tr>
            <tr>
                <td><label for="name">Nome:</label></td>
                <td><input type="text" name="name" id="name" required></td>
            </tr>
            <tr>
                <td><label for="block">Bloco:</label></td>
                <td><input type="text" name="block" id="block" required></td>
            </tr>
        </table><br>
    <center>
    <input type="submit" class="btn btn-primary btn-sm btn-success" value="Atualizar">
</form>

<a href="/Lab/Show/@Model.Id" class="btn btn-primary btn-sm btn-light">Voltar</a><br><br>
